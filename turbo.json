{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["NODE_ENV", "CI"],
	"tasks": {
		"build": {
			"dependsOn": ["^build", "^build:pkg"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"build:pkg": {
			"dependsOn": ["^build:pkg"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"lint:fix": {
			"dependsOn": ["^lint:fix"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {},
		"clean": {
			"cache": false
		},
		"test:coverage": {
			"dependsOn": ["^test:coverage"]
		},
		"test:run": {
			"dependsOn": ["^test:run"]
		}
	}
}
