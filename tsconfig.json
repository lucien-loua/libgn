{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"module": "preserve",
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": [
			"es2022"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"test",
		"dist",
		"node_modules"
	]
}